# ============================================
# DocPat Frontend Environment Configuration
# ============================================
# Copy this file to .env and update with your actual values
# NEVER commit the .env file to version control

# ============================================
# API CONFIGURATION
# ============================================

# Backend API base URL
VITE_API_URL=http://localhost:8080/api/v1

# API request timeout (in milliseconds)
VITE_API_TIMEOUT=30000

# Enable API request/response logging in console
VITE_API_DEBUG=true

# API version
VITE_API_VERSION=v1

# ============================================
# APPLICATION SETTINGS
# ============================================

# Application name
VITE_APP_NAME=DocPat

# Application version
VITE_APP_VERSION=1.0.0

# Environment (development, staging, production)
VITE_ENVIRONMENT=development

# Application base URL
VITE_BASE_URL=http://localhost:5173

# ============================================
# AUTHENTICATION
# ============================================

# Token storage key names (don't change unless necessary)
VITE_ACCESS_TOKEN_KEY=docpat_access_token
VITE_REFRESH_TOKEN_KEY=docpat_refresh_token

# Session timeout warning (in seconds before expiry)
VITE_SESSION_TIMEOUT_WARNING=300  # 5 minutes

# Enable remember me functionality
VITE_ENABLE_REMEMBER_ME=true

# Maximum login attempts before lockout
VITE_MAX_LOGIN_ATTEMPTS=5

# ============================================
# INTERNATIONALIZATION (i18n)
# ============================================

# Default language (en, it)
VITE_DEFAULT_LANGUAGE=it

# Supported languages (comma-separated)
VITE_SUPPORTED_LANGUAGES=en,it

# Enable language detection from browser
VITE_DETECT_BROWSER_LANGUAGE=true

# Fallback language if detection fails
VITE_FALLBACK_LANGUAGE=en

# ============================================
# THEME CONFIGURATION
# ============================================

# Default theme (light, dark, system)
VITE_DEFAULT_THEME=system

# Enable theme persistence in localStorage
VITE_PERSIST_THEME=true

# Theme storage key
VITE_THEME_KEY=docpat_theme

# ============================================
# FEATURE FLAGS
# ============================================

# Enable/disable features
VITE_FEATURE_PATIENT_PORTAL=false
VITE_FEATURE_TELEMEDICINE=false
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_EXPORT_PDF=true
VITE_FEATURE_EXPORT_CSV=true
VITE_FEATURE_DARK_MODE=true
VITE_FEATURE_MFA=true
VITE_FEATURE_CALENDAR_VIEW=true
VITE_FEATURE_DRUG_INTERACTIONS=false

# ============================================
# UI/UX SETTINGS
# ============================================

# Pagination default page size
VITE_DEFAULT_PAGE_SIZE=20

# Maximum items per page
VITE_MAX_PAGE_SIZE=100

# Debounce delay for search inputs (in milliseconds)
VITE_SEARCH_DEBOUNCE_DELAY=300

# Auto-save interval for forms (in milliseconds, 0 to disable)
VITE_AUTOSAVE_INTERVAL=30000  # 30 seconds

# Toast notification duration (in milliseconds)
VITE_TOAST_DURATION=5000

# Enable form validation on blur
VITE_VALIDATE_ON_BLUR=true

# ============================================
# DATE & TIME SETTINGS
# ============================================

# Date format (for display)
VITE_DATE_FORMAT=DD/MM/YYYY

# Time format (12 or 24 hour)
VITE_TIME_FORMAT=24

# DateTime format
VITE_DATETIME_FORMAT=DD/MM/YYYY HH:mm

# Timezone
VITE_TIMEZONE=Europe/Rome

# Calendar first day of week (0 = Sunday, 1 = Monday)
VITE_CALENDAR_FIRST_DAY=1

# ============================================
# FILE UPLOAD SETTINGS
# ============================================

# Maximum file upload size (in bytes)
VITE_MAX_FILE_SIZE=10485760  # 10 MB

# Allowed file types (comma-separated)
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Enable drag-and-drop file upload
VITE_ENABLE_DRAG_DROP=true

# ============================================
# SCHEDULING & APPOINTMENTS
# ============================================

# Default appointment duration (in minutes)
VITE_DEFAULT_APPOINTMENT_DURATION=30

# Appointment time slots (in minutes)
VITE_APPOINTMENT_SLOT_DURATION=15

# Working hours start
VITE_WORKING_HOURS_START=09:00

# Working hours end
VITE_WORKING_HOURS_END=18:00

# Enable appointment reminders
VITE_ENABLE_APPOINTMENT_REMINDERS=true

# Reminder intervals (in minutes, comma-separated)
VITE_REMINDER_INTERVALS=1440,60,15  # 24h, 1h, 15min before

# ============================================
# PATIENT MANAGEMENT
# ============================================

# Enable duplicate patient detection
VITE_ENABLE_DUPLICATE_DETECTION=true

# Minimum search query length
VITE_MIN_SEARCH_LENGTH=2

# Enable patient photo upload
VITE_ENABLE_PATIENT_PHOTOS=true

# Medical record number format
VITE_MRN_PREFIX=MRN

# ============================================
# CLINICAL DOCUMENTATION
# ============================================

# Auto-lock visit notes after (in hours, 0 to disable)
VITE_AUTO_LOCK_VISITS_HOURS=24

# Enable SOAP note templates
VITE_ENABLE_SOAP_TEMPLATES=true

# Enable vital signs graphs
VITE_ENABLE_VITAL_GRAPHS=true

# Enable ICD-10 code lookup
VITE_ENABLE_ICD10_LOOKUP=true

# ============================================
# NOTIFICATIONS
# ============================================

# Enable browser notifications
VITE_ENABLE_BROWSER_NOTIFICATIONS=true

# Enable email notifications
VITE_ENABLE_EMAIL_NOTIFICATIONS=true

# Enable SMS notifications
VITE_ENABLE_SMS_NOTIFICATIONS=false

# Enable WhatsApp notifications
VITE_ENABLE_WHATSAPP_NOTIFICATIONS=false

# Notification sound
VITE_NOTIFICATION_SOUND_ENABLED=true

# ============================================
# PERFORMANCE & CACHING
# ============================================

# Enable service worker for offline support
VITE_ENABLE_SERVICE_WORKER=false

# Cache strategy (networkFirst, cacheFirst, staleWhileRevalidate)
VITE_CACHE_STRATEGY=networkFirst

# Cache expiration (in seconds)
VITE_CACHE_EXPIRATION=3600

# Enable lazy loading for images
VITE_ENABLE_LAZY_LOADING=true

# Enable virtual scrolling for long lists
VITE_ENABLE_VIRTUAL_SCROLL=true

# ============================================
# ANALYTICS & MONITORING
# ============================================

# Enable error tracking
VITE_ENABLE_ERROR_TRACKING=true

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Sentry DSN (if using Sentry for error tracking)
VITE_SENTRY_DSN=

# Google Analytics ID (if using GA)
VITE_GA_TRACKING_ID=

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

# Enable React DevTools
VITE_ENABLE_DEVTOOLS=true

# Enable Redux DevTools
VITE_ENABLE_REDUX_DEVTOOLS=true

# Enable React Query DevTools
VITE_ENABLE_QUERY_DEVTOOLS=true

# Enable debug mode (verbose console logging)
VITE_DEBUG_MODE=true

# Enable mock API responses (for development without backend)
VITE_ENABLE_MOCK_API=false

# Show performance metrics in console
VITE_SHOW_PERFORMANCE_METRICS=false

# ============================================
# SECURITY & PRIVACY
# ============================================

# Enable Content Security Policy
VITE_ENABLE_CSP=true

# Session storage key prefix
VITE_STORAGE_PREFIX=docpat_

# Enable secure cookies (requires HTTPS)
VITE_SECURE_COOKIES=false

# Enable audit logging on client side
VITE_CLIENT_AUDIT_LOG=true

# Mask sensitive data in logs
VITE_MASK_SENSITIVE_DATA=true

# ============================================
# ACCESSIBILITY
# ============================================

# Enable high contrast mode option
VITE_ENABLE_HIGH_CONTRAST=true

# Enable font size adjustment
VITE_ENABLE_FONT_RESIZE=true

# Enable keyboard navigation
VITE_ENABLE_KEYBOARD_NAV=true

# Enable screen reader optimizations
VITE_OPTIMIZE_SCREEN_READER=true

# ============================================
# PRINT & EXPORT SETTINGS
# ============================================

# Default paper size (A4, Letter)
VITE_PRINT_PAPER_SIZE=A4

# Print orientation (portrait, landscape)
VITE_PRINT_ORIENTATION=portrait

# Include header/footer in prints
VITE_PRINT_HEADER_FOOTER=true

# PDF export quality (low, medium, high)
VITE_PDF_EXPORT_QUALITY=high

# ============================================
# MAP & LOCATION SETTINGS (Optional)
# ============================================

# Google Maps API key (for patient address mapping)
VITE_GOOGLE_MAPS_API_KEY=

# Enable location services
VITE_ENABLE_LOCATION_SERVICES=false

# Default map center (latitude, longitude)
VITE_MAP_CENTER_LAT=41.9028
VITE_MAP_CENTER_LNG=12.4964

# Map zoom level
VITE_MAP_ZOOM_LEVEL=12

# ============================================
# THIRD-PARTY INTEGRATIONS
# ============================================

# Stripe API key (for payment processing, if applicable)
VITE_STRIPE_PUBLIC_KEY=

# reCAPTCHA site key (for form protection)
VITE_RECAPTCHA_SITE_KEY=

# Firebase config (if using Firebase)
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=

# ============================================
# BUILD & DEPLOYMENT
# ============================================

# Enable source maps in production
VITE_ENABLE_SOURCE_MAPS=false

# Build target (es2015, es2020, esnext)
VITE_BUILD_TARGET=es2020

# Enable code splitting
VITE_ENABLE_CODE_SPLITTING=true

# Chunk size warning limit (in KB)
VITE_CHUNK_SIZE_WARNING=500

# ============================================
# EXPERIMENTAL FEATURES
# ============================================

# Enable experimental features (use with caution)
VITE_ENABLE_EXPERIMENTAL=false

# Enable beta features
VITE_ENABLE_BETA_FEATURES=false

# ============================================
# MAINTENANCE MODE
# ============================================

# Enable maintenance mode
VITE_MAINTENANCE_MODE=false

# Maintenance mode message
VITE_MAINTENANCE_MESSAGE=System is currently under maintenance

# ============================================
# NOTES
# ============================================
#
# Vite Environment Variable Rules:
# 1. Only variables prefixed with VITE_ are exposed to client-side code
# 2. Never store secrets or sensitive data in frontend env variables
# 3. All VITE_ variables are publicly accessible in the browser
# 4. Use import.meta.env.VITE_* to access these variables in code
#
# Required Variables for Minimal Setup:
# - VITE_API_URL
# - VITE_DEFAULT_LANGUAGE
# - VITE_DEFAULT_THEME
#
# Production Checklist:
# - Set VITE_ENVIRONMENT=production
# - Set correct VITE_API_URL for production backend
# - Disable VITE_DEBUG_MODE
# - Disable VITE_ENABLE_DEVTOOLS
# - Set VITE_SECURE_COOKIES=true (with HTTPS)
# - Disable VITE_API_DEBUG
# - Configure proper analytics if needed
# - Review and disable unused feature flags
#
# ============================================
